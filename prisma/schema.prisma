// ─── Hierarchical Chart of Accounts (Hesap Planı) ─────────────

model AccountPlan {
  id          String  @id @default(cuid())
  code        String  @unique          // "100", "100.01", "100.01.001"
  name        String                   // "Kasa", "TRY Kasa", "Merkez TRY Kasa"
  parentId    String? @map("parent_id")
  parent      AccountPlan?  @relation("AccountPlanTree", fields: [parentId], references: [id])
  children    AccountPlan[] @relation("AccountPlanTree")
  level       Int     @default(0)      // depth in tree: 0=top, 1=group, 2=detail
  accountType AccountPlanType @default(ASSET) @map("account_type")
  currency    String? // optional constraint on currency
  isPostable  Boolean @default(false) @map("is_postable") // only leaf nodes can receive entries
  isActive    Boolean @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([parentId])
  @@map("account_plans")
}

enum AccountPlanType {
  ASSET       // Aktif
  LIABILITY   // Pasif
  EQUITY      // Öz Sermaye
  REVENUE     // Gelir
  EXPENSE     // Gider
}

// ─── Cheque / Promissory Note (Çek / Senet) ─────────────────

model Cheque {
  id            String       @id @default(cuid())
  chequeNo      String       @unique @map("cheque_no")
  type          ChequeType   @default(CHEQUE)
  direction     ChequeDirection @default(RECEIVED)
  drawerId      String       @map("drawer_id") // who wrote it / who we received from
  drawer        Account      @relation("ChequeDrawer", fields: [drawerId], references: [id])
  payeeId       String?      @map("payee_id")  // who it was endorsed to
  payee         Account?     @relation("ChequePayee", fields: [payeeId], references: [id])
  branchId      String       @map("branch_id")
  branch        Branch       @relation(fields: [branchId], references: [id])
  bankName      String?      @map("bank_name")
  bankBranch    String?      @map("bank_branch")
  amount        Decimal      @db.Decimal(15, 2)
  currency      String       @default("TRY")
  issueDate     DateTime     @map("issue_date") @db.Date
  dueDate       DateTime     @map("due_date") @db.Date
  status        ChequeStatus @default(PORTFOLIO)
  endorsedTo    String?      @map("endorsed_to") // free text for quick reference
  bouncedAt     DateTime?    @map("bounced_at")
  collectedAt   DateTime?    @map("collected_at")
  isCancelled   Boolean      @default(false) @map("is_cancelled")
  notes         String?
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  history ChequeHistory[]

  @@index([branchId, dueDate])
  @@index([drawerId])
  @@index([status])
  @@map("cheques")
}

enum ChequeType {
  CHEQUE
  PROMISSORY_NOTE
}

enum ChequeDirection {
  RECEIVED   // Alınan
  GIVEN      // Verilen
}

enum ChequeStatus {
  PORTFOLIO    // Portföyde
  DEPOSITED    // Bankaya teslim
  ENDORSED     // Ciro edildi
  COLLATERAL   // Teminata verildi
  COLLECTED    // Tahsil edildi
  PAID         // Ödendi (verilen için)
  BOUNCED      // Karşılıksız
  CANCELLED    // İptal
}

model ChequeHistory {
  id        String       @id @default(cuid())
  chequeId  String       @map("cheque_id")
  cheque    Cheque       @relation(fields: [chequeId], references: [id])
  fromStatus ChequeStatus @map("from_status")
  toStatus  ChequeStatus @map("to_status")
  notes     String?
  performedBy String     @map("performed_by")
  createdAt DateTime     @default(now()) @map("created_at")

  @@index([chequeId])
  @@map("cheque_history")
}

// ─── Cost Centers (Maliyet Merkezleri) ──────────────────────

model CostCenter {
  id        String  @id @default(cuid())
  code      String  @unique            // "PROD", "PROD.WEAVE", "PROD.WEAVE.M1"
  name      String                     // "Üretim", "Dokuma Hattı", "Makine 1"
  parentId  String? @map("parent_id")
  parent    CostCenter?  @relation("CostCenterTree", fields: [parentId], references: [id])
  children  CostCenter[] @relation("CostCenterTree")
  level     Int     @default(0)
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([parentId])
  @@map("cost_centers")
}

