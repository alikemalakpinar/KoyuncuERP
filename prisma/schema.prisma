// ─── Bill of Materials (Ürün Reçetesi) ─────────────────────────

model BillOfMaterial {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String                 // "El Dokuma Halı Reçetesi — 200x300"
  productId   String   @map("product_id")
  product     Product  @relation(fields: [productId], references: [id])
  outputQty   Decimal  @default(1) @map("output_qty") @db.Decimal(10, 2) // how many units this BOM produces
  outputUnit  String   @default("PCS") @map("output_unit")
  laborHours  Decimal  @default(0) @map("labor_hours") @db.Decimal(10, 2)
  laborCost   Decimal  @default(0) @map("labor_cost") @db.Decimal(15, 2)
  overheadCost Decimal @default(0) @map("overhead_cost") @db.Decimal(15, 2)
  isActive    Boolean  @default(true) @map("is_active")
  version     Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  items       BomItem[]
  workOrders  WorkOrder[]

  @@index([productId])
  @@map("bill_of_materials")
}

model BomItem {
  id          String          @id @default(cuid())
  bomId       String          @map("bom_id")
  bom         BillOfMaterial  @relation(fields: [bomId], references: [id])
  productId   String          @map("product_id")   // component/raw material product
  product     Product         @relation("BomComponentProduct", fields: [productId], references: [id])
  quantity    Decimal         @db.Decimal(10, 4)    // amount needed per outputQty
  unit        String          @default("KG")        // unit of the component
  wastePct    Decimal         @default(0) @map("waste_pct") @db.Decimal(5, 2) // expected waste %
  notes       String?
  sortOrder   Int             @default(0) @map("sort_order")

  @@index([bomId])
  @@map("bom_items")
}

// ─── Work Orders (İş Emirleri) ─────────────────────────────────

model WorkOrder {
  id               String          @id @default(cuid())
  workOrderNo      String          @unique @map("work_order_no")
  bomId            String          @map("bom_id")
  bom              BillOfMaterial  @relation(fields: [bomId], references: [id])
  orderId          String?         @map("order_id") // linked sales order if any
  order            Order?          @relation(fields: [orderId], references: [id])
  branchId         String          @map("branch_id")
  branch           Branch          @relation(fields: [branchId], references: [id])
  outputVariantId  String?         @map("output_variant_id")
  outputVariant    ProductVariant? @relation("WorkOrderOutputVariant", fields: [outputVariantId], references: [id])
  plannedQty       Decimal         @map("planned_qty") @db.Decimal(10, 2)
  producedQty      Decimal         @default(0) @map("produced_qty") @db.Decimal(10, 2)
  wasteQty         Decimal         @default(0) @map("waste_qty") @db.Decimal(10, 2)
  status           WorkOrderStatus @default(DRAFT)
  plannedStart     DateTime?       @map("planned_start")
  plannedEnd       DateTime?       @map("planned_end")
  actualStart      DateTime?       @map("actual_start")
  actualEnd        DateTime?       @map("actual_end")
  costCenterCode   String?         @map("cost_center_code")
  materialCost     Decimal         @default(0) @map("material_cost") @db.Decimal(15, 2)
  laborCost        Decimal         @default(0) @map("labor_cost") @db.Decimal(15, 2)
  overheadCost     Decimal         @default(0) @map("overhead_cost") @db.Decimal(15, 2)
  totalCost        Decimal         @default(0) @map("total_cost") @db.Decimal(15, 2) // COGM
  notes            String?
  isCancelled      Boolean         @default(false) @map("is_cancelled")
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")

  consumptions WorkOrderConsumption[]

  @@index([branchId, status])
  @@index([orderId])
  @@index([bomId])
  @@map("work_orders")
}

enum WorkOrderStatus {
  DRAFT
  RELEASED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model WorkOrderConsumption {
  id          String    @id @default(cuid())
  workOrderId String    @map("work_order_id")
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id])
  productId   String    @map("product_id")  // raw material consumed
  quantity    Decimal   @db.Decimal(10, 4)
  unit        String
  unitCost    Decimal   @default(0) @map("unit_cost") @db.Decimal(15, 2)
  totalCost   Decimal   @default(0) @map("total_cost") @db.Decimal(15, 2)
  consumedAt  DateTime  @default(now()) @map("consumed_at")

  @@index([workOrderId])
  @@map("work_order_consumptions")
}
