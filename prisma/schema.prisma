generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Identity & Access ─────────────────────────────────────

enum UserRole {
  OWNER
  ADMIN
  MANAGER
  SALES
  ACCOUNTANT
  VIEWER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  fullName     String   @map("full_name")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  branches         UserBranch[]
  sessions         Session[]
  cashTransactions CashTransaction[]
  auditLogs        AuditLog[]

  @@map("users")
}

model Branch {
  id          String  @id @default(cuid())
  name        String
  code        String  @unique
  address     String?
  warehouseId String? @unique @map("warehouse_id")
  warehouse   Warehouse? @relation(fields: [warehouseId], references: [id])
  isActive    Boolean @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  users             UserBranch[]
  orders            Order[]
  invoices          Invoice[]
  accounts          Account[]
  ledgerEntries     LedgerEntry[]
  stockMovements    StockMovement[]
  cashRegisters     CashRegister[]
  cashTransactions  CashTransaction[]
  payments          Payment[]
  auditLogs         AuditLog[]
  inventoryLots     InventoryLot[]
  inventoryTransactions InventoryTransaction[]
  periodLocks       PeriodLock[]
  commissionRecords CommissionRecord[]
  documents         Document[]
  shipments         Shipment[]
  landedCosts       LandedCost[]

  @@map("branches")
}

model UserBranch {
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  branchId  String   @map("branch_id")
  branch    Branch   @relation(fields: [branchId], references: [id])
  role      UserRole
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  @@id([userId, branchId])
  @@map("user_branches")
}

model Session {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id])
  tokenHash String    @unique @map("token_hash")
  createdAt DateTime  @default(now()) @map("created_at")
  expiresAt DateTime  @map("expires_at")
  revokedAt DateTime? @map("revoked_at")

  @@index([userId])
  @@index([tokenHash])
  @@map("sessions")
}

// ─── Cash Register & Transactions ──────────────────────────

enum CashTransactionType {
  IN
  OUT
}

model CashRegister {
  id             String   @id @default(cuid())
  branchId       String   @map("branch_id")
  branch         Branch   @relation(fields: [branchId], references: [id])
  name           String
  isActive       Boolean  @default(true) @map("is_active")
  openingBalance Decimal  @default(0) @map("opening_balance") @db.Decimal(15, 2)
  currentBalance Decimal  @default(0) @map("current_balance") @db.Decimal(15, 2)
  isOpen         Boolean  @default(false) @map("is_open")
  lastOpenedAt   DateTime? @map("last_opened_at")
  lastClosedAt   DateTime? @map("last_closed_at")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  transactions CashTransaction[]

  @@index([branchId])
  @@map("cash_registers")
}

model CashTransaction {
  id             String              @id @default(cuid())
  cashRegisterId String              @map("cash_register_id")
  cashRegister   CashRegister        @relation(fields: [cashRegisterId], references: [id])
  branchId       String              @map("branch_id")
  branch         Branch              @relation(fields: [branchId], references: [id])
  type           CashTransactionType
  amount         Decimal             @db.Decimal(15, 2)
  reason         String
  refType        String?             @map("ref_type")
  refId          String?             @map("ref_id")
  createdByUserId String             @map("created_by_user_id")
  createdByUser  User                @relation(fields: [createdByUserId], references: [id])
  createdAt      DateTime            @default(now()) @map("created_at")

  @@index([branchId, createdAt])
  @@index([cashRegisterId])
  @@map("cash_transactions")
}

// ─── Payments (Split Payments) ─────────────────────────────

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
  INSTALLMENT
}

model Payment {
  id       String        @id @default(cuid())
  orderId  String        @map("order_id")
  order    Order         @relation(fields: [orderId], references: [id])
  branchId String        @map("branch_id")
  branch   Branch        @relation(fields: [branchId], references: [id])
  method   PaymentMethod
  amount   Decimal       @db.Decimal(15, 2)
  currency String        @default("USD")
  paidAt   DateTime      @default(now()) @map("paid_at")
  note     String?

  @@index([branchId, paidAt])
  @@index([orderId])
  @@map("payments")
}

// ─── Products (Urun Katalogu) ──────────────────────────────

model Product {
  id          String           @id @default(cuid())
  code        String           @unique
  name        String
  collection  String?
  material    ProductMaterial  @default(WOOL)
  description String?
  images      String[]         @default([])
  isActive    Boolean          @default(true) @map("is_active")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  variants       ProductVariant[]
  stockMovements StockMovement[]
  inventoryLots  InventoryLot[]

  @@map("products")
}

enum ProductMaterial {
  WOOL
  ACRYLIC
  POLYESTER
  COTTON
  SILK
  VISCOSE
  BAMBOO
  BLEND
  OTHER
}

model ProductVariant {
  id        String  @id @default(cuid())
  productId String  @map("product_id")
  product   Product @relation(fields: [productId], references: [id])
  sku       String  @unique
  size      String
  width     Int
  length    Int
  areaM2    Decimal @map("area_m2") @db.Decimal(10, 4)
  color     String?
  barcode   String? @unique
  listPrice Decimal @map("list_price") @db.Decimal(15, 2)
  baseCost  Decimal @map("base_cost") @db.Decimal(15, 2)
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  stocks                Stock[]
  stockMovements        StockMovement[]
  orderItems            OrderItem[]
  inventoryLots         InventoryLot[]
  inventoryTransactions InventoryTransaction[]
  priceListItems        PriceListItem[]

  @@index([productId])
  @@map("product_variants")
}

// ─── Warehouse & Stock ─────────────────────────────────────

model Warehouse {
  id        String  @id @default(cuid())
  code      String  @unique
  name      String
  country   String  @default("TR")
  city      String?
  address   String?
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  stocks                Stock[]
  stockMovements        StockMovement[]
  inventoryLots         InventoryLot[]
  inventoryTransactions InventoryTransaction[]
  branch                Branch?

  @@map("warehouses")
}

model Stock {
  id               String         @id @default(cuid())
  variantId        String         @map("variant_id")
  variant          ProductVariant @relation(fields: [variantId], references: [id])
  warehouseId      String         @map("warehouse_id")
  warehouse        Warehouse      @relation(fields: [warehouseId], references: [id])
  quantity         Int            @default(0)
  reservedQuantity Int            @default(0) @map("reserved_quantity")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  @@unique([variantId, warehouseId])
  @@map("stocks")
}

model StockMovement {
  id            String            @id @default(cuid())
  variantId     String            @map("variant_id")
  variant       ProductVariant    @relation(fields: [variantId], references: [id])
  warehouseId   String            @map("warehouse_id")
  warehouse     Warehouse         @relation(fields: [warehouseId], references: [id])
  productId     String            @map("product_id")
  product       Product           @relation(fields: [productId], references: [id])
  branchId      String            @map("branch_id")
  branch        Branch            @relation(fields: [branchId], references: [id])
  type          StockMovementType
  quantity      Int
  referenceId   String?           @map("reference_id")
  referenceType String?           @map("reference_type")
  description   String?
  createdAt     DateTime          @default(now()) @map("created_at")

  @@index([variantId, warehouseId])
  @@index([referenceId, referenceType])
  @@index([branchId, createdAt])
  @@map("stock_movements")
}

enum StockMovementType {
  IN
  OUT
  RESERVE
  UNRESERVE
  TRANSFER
  ADJUSTMENT
}

// ─── Invoice (Fatura) ──────────────────────────────────────

model Invoice {
  id          String        @id @default(cuid())
  invoiceNo   String        @unique @map("invoice_no")
  orderId     String        @map("order_id")
  order       Order         @relation(fields: [orderId], references: [id])
  branchId    String        @map("branch_id")
  branch      Branch        @relation(fields: [branchId], references: [id])
  date        DateTime      @db.Date
  dueDate     DateTime?     @map("due_date") @db.Date
  subtotal    Decimal       @db.Decimal(15, 2)
  taxTotal    Decimal       @default(0) @map("tax_total") @db.Decimal(15, 2)
  grandTotal  Decimal       @map("grand_total") @db.Decimal(15, 2)
  currency    String        @default("USD")
  status      InvoiceStatus @default(DRAFT)
  pdfPath     String?       @map("pdf_path")
  isCancelled Boolean       @default(false) @map("is_cancelled")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  ledgerEntries LedgerEntry[]

  @@index([orderId])
  @@index([branchId, createdAt])
  @@map("invoices")
}

enum InvoiceStatus {
  DRAFT
  FINALIZED
  SENT
  CANCELLED
}

// ─── Accounts (Cari) ───────────────────────────────────────

model Account {
  id              String      @id @default(cuid())
  code            String
  name            String
  type            AccountType
  branchId        String      @map("branch_id")
  branch          Branch      @relation(fields: [branchId], references: [id])
  taxId           String?     @map("tax_id")
  phone           String?
  email           String?
  address         String?
  city            String?
  country         String      @default("TR")
  currency        String      @default("USD")
  riskLimit       Decimal     @default(0) @map("risk_limit") @db.Decimal(15, 2)
  currentBalance  Decimal     @default(0) @map("current_balance") @db.Decimal(15, 2)
  paymentTermDays Int         @default(30) @map("payment_term_days")
  isActive        Boolean     @default(true) @map("is_active")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  // Acente hiyerarsisi
  parentAccountId String?     @map("parent_account_id")
  parentAccount   Account?    @relation("AccountHierarchy", fields: [parentAccountId], references: [id])
  childAccounts   Account[]   @relation("AccountHierarchy")

  // Fiyat listesi
  priceListId     String?     @map("price_list_id")
  priceList       PriceList?  @relation("AccountPriceList", fields: [priceListId], references: [id])

  orders          Order[]
  ledgerEntries   LedgerEntry[]
  agency          Agency?

  @@unique([branchId, code])
  @@index([branchId])
  @@map("accounts")
}

enum AccountType {
  CUSTOMER
  SUPPLIER
  BOTH
  AGENCY
}

// ─── Agency (Acente) ───────────────────────────────────────

model Agency {
  id                String   @id @default(cuid())
  accountId         String   @unique @map("account_id")
  account           Account  @relation(fields: [accountId], references: [id])
  region            String?
  defaultCommission Decimal  @default(0) @map("default_commission") @db.Decimal(5, 2)
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  staff             AgencyStaff[]
  commissionConfigs CommissionConfig[]
  commissionRecords CommissionRecord[]

  @@map("agencies")
}

model AgencyStaff {
  id              String   @id @default(cuid())
  agencyId        String   @map("agency_id")
  agency          Agency   @relation(fields: [agencyId], references: [id])
  name            String
  email           String?
  phone           String?
  staffCommission Decimal  @default(0) @map("staff_commission") @db.Decimal(5, 2)
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  orders            Order[]
  commissionRecords CommissionRecord[]

  @@map("agency_staff")
}

model CommissionConfig {
  id             String    @id @default(cuid())
  agencyId       String    @map("agency_id")
  agency         Agency    @relation(fields: [agencyId], references: [id])
  productGroup   String?   @map("product_group")
  region         String?
  commissionRate Decimal   @map("commission_rate") @db.Decimal(5, 2)
  validFrom      DateTime  @default(now()) @map("valid_from")
  validTo        DateTime? @map("valid_to")
  isActive       Boolean   @default(true) @map("is_active")
  createdAt      DateTime  @default(now()) @map("created_at")

  @@index([agencyId, productGroup])
  @@map("commission_configs")
}

// ─── Orders ─────────────────────────────────────────────────

model Order {
  id                   String      @id @default(cuid())
  orderNo              String      @map("order_no")
  accountId            String      @map("account_id")
  account              Account     @relation(fields: [accountId], references: [id])
  branchId             String      @map("branch_id")
  branch               Branch      @relation(fields: [branchId], references: [id])
  status               OrderStatus @default(DRAFT)
  currency             String      @default("USD")
  totalAmount          Decimal     @default(0) @map("total_amount") @db.Decimal(15, 2)
  vatRate              Decimal     @default(0) @map("vat_rate") @db.Decimal(5, 2)
  vatAmount            Decimal     @default(0) @map("vat_amount") @db.Decimal(15, 2)
  grandTotal           Decimal     @default(0) @map("grand_total") @db.Decimal(15, 2)

  // Acente komisyon alanlari
  agencyStaffId        String?     @map("agency_staff_id")
  agencyStaff          AgencyStaff? @relation(fields: [agencyStaffId], references: [id])
  agencyCommissionRate Decimal     @default(0) @map("agency_commission_rate") @db.Decimal(5, 2)
  staffCommissionRate  Decimal     @default(0) @map("staff_commission_rate") @db.Decimal(5, 2)

  // Kur bilgisi
  orderExchangeRate    Decimal     @default(1) @map("order_exchange_rate") @db.Decimal(10, 4)

  notes                String?
  isCancelled          Boolean     @default(false) @map("is_cancelled")
  createdAt            DateTime    @default(now()) @map("created_at")
  updatedAt            DateTime    @updatedAt @map("updated_at")

  items             OrderItem[]
  shipments         Shipment[]
  landedCosts       LandedCost[]
  commissionRecords CommissionRecord[]
  invoices          Invoice[]
  payments          Payment[]

  @@unique([branchId, orderNo])
  @@index([branchId, createdAt])
  @@map("orders")
}

enum OrderStatus {
  DRAFT
  CONFIRMED
  IN_PRODUCTION
  READY
  PARTIALLY_SHIPPED
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id            String          @id @default(cuid())
  orderId       String          @map("order_id")
  order         Order           @relation(fields: [orderId], references: [id])
  variantId     String?         @map("variant_id")
  variant       ProductVariant? @relation(fields: [variantId], references: [id])
  productName   String          @map("product_name")
  productGroup  String?         @map("product_group")
  sku           String?
  quantity      Decimal         @db.Decimal(10, 2)
  unit          String          @default("m2")
  unitPrice     Decimal         @map("unit_price") @db.Decimal(15, 2)
  totalPrice    Decimal         @map("total_price") @db.Decimal(15, 2)
  purchasePrice Decimal         @default(0) @map("purchase_price") @db.Decimal(15, 2)

  @@map("order_items")
}

// ─── Landed Cost (Toplam Maliyet Analizi) ──────────────────

model LandedCost {
  id           String         @id @default(cuid())
  orderId      String         @map("order_id")
  order        Order          @relation(fields: [orderId], references: [id])
  branchId     String         @map("branch_id")
  branch       Branch         @relation(fields: [branchId], references: [id])
  costType     LandedCostType
  amount       Decimal        @db.Decimal(15, 2)
  currency     String         @default("USD")
  exchangeRate Decimal        @default(1) @map("exchange_rate") @db.Decimal(10, 4)
  description  String?
  isCancelled  Boolean        @default(false) @map("is_cancelled")
  createdAt    DateTime       @default(now()) @map("created_at")

  @@index([orderId])
  @@index([branchId])
  @@map("landed_costs")
}

enum LandedCostType {
  PURCHASE
  FREIGHT
  CUSTOMS_TAX
  WAREHOUSE
  INSURANCE
  AGENCY_FEE
  OTHER
}

// ─── Commission Records (Hakedis Kayitlari) ────────────────

model CommissionRecord {
  id               String           @id @default(cuid())
  orderId          String           @map("order_id")
  order            Order            @relation(fields: [orderId], references: [id])
  agencyId         String           @map("agency_id")
  agency           Agency           @relation(fields: [agencyId], references: [id])
  branchId         String           @map("branch_id")
  branch           Branch           @relation(fields: [branchId], references: [id])
  agencyStaffId    String?          @map("agency_staff_id")
  agencyStaff      AgencyStaff?     @relation(fields: [agencyStaffId], references: [id])
  commissionRate   Decimal          @map("commission_rate") @db.Decimal(5, 2)
  baseAmount       Decimal          @map("base_amount") @db.Decimal(15, 2)
  commissionAmount Decimal          @map("commission_amount") @db.Decimal(15, 2)
  status           CommissionStatus @default(PENDING)
  paidAt           DateTime?        @map("paid_at")
  isCancelled      Boolean          @default(false) @map("is_cancelled")
  createdAt        DateTime         @default(now()) @map("created_at")

  @@index([agencyId, status])
  @@index([branchId])
  @@map("commission_records")
}

enum CommissionStatus {
  PENDING
  APPROVED
  PAID
  CANCELLED
}

// ─── Shipments ──────────────────────────────────────────────

model Shipment {
  id               String         @id @default(cuid())
  shipmentNo       String         @unique @map("shipment_no")
  orderId          String         @map("order_id")
  order            Order          @relation(fields: [orderId], references: [id])
  branchId         String         @map("branch_id")
  branch           Branch         @relation(fields: [branchId], references: [id])
  status           ShipmentStatus @default(PREPARING)
  origin           String         @default("TR")
  destination      String
  containerNo      String?        @map("container_no")
  trackingNo       String?        @map("tracking_no")
  estimatedArrival DateTime?      @map("estimated_arrival")
  actualArrival    DateTime?      @map("actual_arrival")
  freightCost      Decimal        @default(0) @map("freight_cost") @db.Decimal(15, 2)
  insuranceCost    Decimal        @default(0) @map("insurance_cost") @db.Decimal(15, 2)
  customsCost      Decimal        @default(0) @map("customs_cost") @db.Decimal(15, 2)
  isCancelled      Boolean        @default(false) @map("is_cancelled")
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  @@index([branchId])
  @@map("shipments")
}

enum ShipmentStatus {
  PREPARING
  IN_TRANSIT_TR
  AT_PORT
  IN_TRANSIT_SEA
  CUSTOMS
  IN_TRANSIT_USA
  FINAL_MILE
  DELIVERED
}

// ─── Ledger (Source of Truth) ───────────────────────────────

model LedgerEntry {
  id            String     @id @default(cuid())
  entryNo       String     @unique @map("entry_no")
  accountId     String     @map("account_id")
  account       Account    @relation(fields: [accountId], references: [id])
  branchId      String     @map("branch_id")
  branch        Branch     @relation(fields: [branchId], references: [id])
  type          LedgerType
  debit         Decimal    @default(0) @db.Decimal(15, 2)
  credit        Decimal    @default(0) @db.Decimal(15, 2)
  currency      String     @default("USD")
  exchangeRate  Decimal    @default(1) @map("exchange_rate") @db.Decimal(10, 4)
  costCenter    String?    @map("cost_center")
  description   String
  referenceId   String?    @map("reference_id")
  referenceType String?    @map("reference_type")
  invoiceId     String?    @map("invoice_id")
  invoice       Invoice?   @relation(fields: [invoiceId], references: [id])
  isCancelled   Boolean    @default(false) @map("is_cancelled")
  createdAt     DateTime   @default(now()) @map("created_at")

  @@index([accountId, createdAt])
  @@index([branchId, createdAt])
  @@index([costCenter])
  @@index([referenceId, referenceType])
  @@map("ledger_entries")
}

enum LedgerType {
  INVOICE
  PAYMENT
  COLLECTION
  REVERSAL
  ADJUSTMENT
  COMMISSION
  FX_GAIN_LOSS
}

// ─── Documents ──────────────────────────────────────────────

model Document {
  id          String       @id @default(cuid())
  docNo       String       @unique @map("doc_no")
  type        DocumentType
  branchId    String       @map("branch_id")
  branch      Branch       @relation(fields: [branchId], references: [id])
  data        Json
  isCancelled Boolean      @default(false) @map("is_cancelled")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  @@index([branchId])
  @@map("documents")
}

enum DocumentType {
  PROFORMA
  INVOICE
  PACKING_LIST
  CREDIT_NOTE
}

// ─── Inventory Lots (FIFO Stok Takibi) ─────────────────────

model InventoryLot {
  id                String   @id @default(cuid())
  productId         String   @map("product_id")
  product           Product  @relation(fields: [productId], references: [id])
  variantId         String   @map("variant_id")
  variant           ProductVariant @relation(fields: [variantId], references: [id])
  warehouseId       String   @map("warehouse_id")
  warehouse         Warehouse @relation(fields: [warehouseId], references: [id])
  branchId          String   @map("branch_id")
  branch            Branch   @relation(fields: [branchId], references: [id])
  batchNo           String   @unique @map("batch_no")
  quantity          Decimal  @db.Decimal(10, 2)
  remainingQuantity Decimal  @map("remaining_quantity") @db.Decimal(10, 2)
  unitCost          Decimal  @map("unit_cost") @db.Decimal(15, 2)
  receivedDate      DateTime @default(now()) @map("received_date")
  createdAt         DateTime @default(now()) @map("created_at")

  transactions InventoryTransaction[]

  @@index([variantId, warehouseId])
  @@index([branchId])
  @@index([receivedDate])
  @@map("inventory_lots")
}

model InventoryTransaction {
  id            String                   @id @default(cuid())
  type          InventoryTransactionType
  variantId     String                   @map("variant_id")
  variant       ProductVariant           @relation(fields: [variantId], references: [id])
  warehouseId   String                   @map("warehouse_id")
  warehouse     Warehouse                @relation(fields: [warehouseId], references: [id])
  branchId      String                   @map("branch_id")
  branch        Branch                   @relation(fields: [branchId], references: [id])
  lotId         String?                  @map("lot_id")
  lot           InventoryLot?            @relation(fields: [lotId], references: [id])
  quantity      Decimal                  @db.Decimal(10, 2)
  unitCost      Decimal                  @default(0) @map("unit_cost") @db.Decimal(15, 2)
  totalCost     Decimal                  @default(0) @map("total_cost") @db.Decimal(15, 2)
  referenceId   String?                  @map("reference_id")
  referenceType String?                  @map("reference_type")
  description   String?
  createdAt     DateTime                 @default(now()) @map("created_at")

  @@index([variantId, createdAt])
  @@index([branchId, createdAt])
  @@index([referenceId, referenceType])
  @@map("inventory_transactions")
}

enum InventoryTransactionType {
  PURCHASE
  SALE
  TRANSFER
  ADJUSTMENT
  RETURN
}

// ─── Price Lists (Fiyat Listeleri) ──────────────────────────

model PriceList {
  id        String  @id @default(cuid())
  name      String
  currency  String  @default("USD")
  isDefault Boolean @default(false) @map("is_default")
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  items    PriceListItem[]
  accounts Account[]       @relation("AccountPriceList")

  @@map("price_lists")
}

model PriceListItem {
  id          String         @id @default(cuid())
  priceListId String         @map("price_list_id")
  priceList   PriceList      @relation(fields: [priceListId], references: [id])
  variantId   String         @map("variant_id")
  variant     ProductVariant @relation(fields: [variantId], references: [id])
  price       Decimal        @db.Decimal(15, 2)
  minQuantity Decimal        @default(1) @map("min_quantity") @db.Decimal(10, 2)
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  @@unique([priceListId, variantId, minQuantity])
  @@map("price_list_items")
}

// ─── Period Lock (Donem Kilitleme) ──────────────────────────

model PeriodLock {
  id          String   @id @default(cuid())
  closingDate DateTime @map("closing_date") @db.Date
  lockedBy    String   @map("locked_by")
  branchId    String   @map("branch_id")
  branch      Branch   @relation(fields: [branchId], references: [id])
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([branchId])
  @@map("period_locks")
}

// ─── Audit Log (Denetim Izi) ───────────────────────────────

model AuditLog {
  id              String   @id @default(cuid())
  entityType      String   @map("entity_type")
  entityId        String   @map("entity_id")
  action          String   // CREATE, UPDATE, STATUS_CHANGE, CANCEL, REVERSAL
  previousData    Json?    @map("previous_data")
  newData         Json?    @map("new_data")
  userId          String   @map("user_id")
  user            User     @relation(fields: [userId], references: [id])
  branchId        String   @map("branch_id")
  branch          Branch   @relation(fields: [branchId], references: [id])
  description     String
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([entityType, entityId])
  @@index([branchId, createdAt])
  @@index([createdAt])
  @@map("audit_logs")
}

// ─── Exchange Rates (Kur Tablosu) ──────────────────────────

model ExchangeRate {
  id           String   @id @default(cuid())
  fromCurrency String   @map("from_currency")
  toCurrency   String   @map("to_currency")
  rate         Decimal  @db.Decimal(10, 4)
  date         DateTime @db.Date
  createdAt    DateTime @default(now()) @map("created_at")

  @@unique([fromCurrency, toCurrency, date])
  @@map("exchange_rates")
}
