// ─── Dynamic Product Attributes (EAV relational) ──────────────

model ProductAttribute {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  dataType    AttributeDataType @default(TEXT) @map("data_type")
  unit        String?           // e.g. "knot/m²", "mm", "dtex"
  isRequired  Boolean @default(false) @map("is_required")
  isFilterable Boolean @default(true) @map("is_filterable")
  options     String[]  @default([]) // predefined values for SELECT type
  sortOrder   Int     @default(0) @map("sort_order")
  isActive    Boolean @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  values      ProductAttributeValue[]
  categories  CategoryAttribute[]

  @@map("product_attributes")
}

enum AttributeDataType {
  TEXT
  NUMBER
  BOOLEAN
  SELECT
  MULTISELECT
  DATE
}

model ProductAttributeValue {
  id          String           @id @default(cuid())
  attributeId String           @map("attribute_id")
  attribute   ProductAttribute @relation(fields: [attributeId], references: [id])
  productId   String           @map("product_id")
  product     Product          @relation(fields: [productId], references: [id])
  variantId   String?          @map("variant_id")
  variant     ProductVariant?  @relation(fields: [variantId], references: [id])
  valueText   String?          @map("value_text")
  valueNumber Decimal?         @map("value_number") @db.Decimal(15, 4)
  valueBool   Boolean?         @map("value_bool")
  createdAt   DateTime         @default(now()) @map("created_at")

  @@unique([attributeId, productId, variantId])
  @@index([productId])
  @@index([attributeId, valueText])
  @@index([attributeId, valueNumber])
  @@map("product_attribute_values")
}

model ProductCategory {
  id        String  @id @default(cuid())
  code      String  @unique
  name      String
  parentId  String? @map("parent_id")
  parent    ProductCategory?  @relation("CategoryTree", fields: [parentId], references: [id])
  children  ProductCategory[] @relation("CategoryTree")
  sortOrder Int     @default(0) @map("sort_order")
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  attributes CategoryAttribute[]

  @@map("product_categories")
}

model CategoryAttribute {
  categoryId  String          @map("category_id")
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  attributeId String          @map("attribute_id")
  attribute   ProductAttribute @relation(fields: [attributeId], references: [id])
  isRequired  Boolean @default(false) @map("is_required")
  sortOrder   Int     @default(0) @map("sort_order")

  @@id([categoryId, attributeId])
  @@map("category_attributes")
}

// ─── Multi-UoM (Unit of Measure) ──────────────────────────────

model UnitOfMeasure {
  id          String  @id @default(cuid())
  code        String  @unique          // "PCS", "M2", "KG", "ROLL", "MTR"
  name        String                   // "Adet", "Metrekare", "Kilogram", "Top", "Metre"
  category    UomCategory @default(OTHER) // AREA, WEIGHT, LENGTH, COUNT, VOLUME
  isBase      Boolean @default(false) @map("is_base")  // base unit for its category
  isActive    Boolean @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")

  conversionsFrom UomConversion[] @relation("UomFrom")
  conversionsTo   UomConversion[] @relation("UomTo")

  @@map("units_of_measure")
}

enum UomCategory {
  AREA
  WEIGHT
  LENGTH
  COUNT
  VOLUME
  OTHER
}

model UomConversion {
  id         String        @id @default(cuid())
  fromUomId  String        @map("from_uom_id")
  fromUom    UnitOfMeasure @relation("UomFrom", fields: [fromUomId], references: [id])
  toUomId    String        @map("to_uom_id")
  toUom      UnitOfMeasure @relation("UomTo", fields: [toUomId], references: [id])
  factor     Decimal       @db.Decimal(15, 6) // 1 fromUom = factor * toUom
  productId  String?       @map("product_id") // NULL = global, non-null = product-specific
  isActive   Boolean       @default(true) @map("is_active")
  createdAt  DateTime      @default(now()) @map("created_at")

  @@unique([fromUomId, toUomId, productId])
  @@map("uom_conversions")
}

// ─── Variant Dimensions (n-axis variant generator) ────────────

model VariantDimension {
